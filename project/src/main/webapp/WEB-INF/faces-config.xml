<?xml version="1.0"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">
	
	<application>
		<action-listener>org.primefaces.application.DialogActionListener</action-listener>
		<navigation-handler>org.primefaces.application.DialogNavigationHandler</navigation-handler>
		<view-handler>org.primefaces.application.DialogViewHandler</view-handler>
	</application>
	
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
		<message-bundle>messages.messages</message-bundle>		
		<resource-bundle>
			<base-name>messages.ApplicationResources</base-name>
			<var>msgs</var>
		</resource-bundle>       
	</application>

	<render-kit>
		<renderer>
			<component-family>javax.faces.Panel</component-family>
			<renderer-type>javax.faces.Grid</renderer-type>
			<renderer-class>br.com.project.foundation.custom.CustomGridRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.GMapRenderer</renderer-type>
			<renderer-class>br.com.project.foundation.custom.CustomGMapRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.MessagesRenderer</renderer-type>
			<renderer-class>br.com.project.foundation.custom.CustomMessagesRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.DialogRenderer</renderer-type>
			<renderer-class>br.com.project.foundation.custom.CustomDialogRenderer</renderer-class>
		</renderer>		
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.OutputLabelRenderer</renderer-type>
			<renderer-class>br.com.project.foundation.custom.CustomOutputLabelRenderer</renderer-class>
		</renderer>	
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.SelectOneMenuRenderer</renderer-type>
			<renderer-class>br.com.project.foundation.custom.CustomSelectOneMenuRenderer</renderer-class>
		</renderer>	
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.CalendarRenderer</renderer-type>
			<renderer-class>br.com.project.foundation.custom.CustomCalendarRenderer</renderer-class>
		</renderer>			
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.CommandButtonRenderer</renderer-type>
			<renderer-class>br.com.project.foundation.custom.CustomCommandButtonRenderer</renderer-class>
		</renderer>	
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.CommandLinkRenderer</renderer-type>
			<renderer-class>br.com.project.foundation.custom.CustomCommandLinkRenderer</renderer-class>
		</renderer>	
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.InputTextareaRenderer</renderer-type>
			<renderer-class>br.com.project.foundation.custom.CustomInputTextareaRenderer</renderer-class>
		</renderer>
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.InputTextRenderer</renderer-type>
			<renderer-class>br.com.project.foundation.custom.CustomInputTextRenderer</renderer-class>
		</renderer>	
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.InputMaskRenderer</renderer-type>
			<renderer-class>br.com.project.foundation.custom.CustomInputMaskRenderer</renderer-class>
		</renderer>				
		<renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.DataTableRenderer</renderer-type>
			<renderer-class>br.com.project.foundation.custom.CustomDataTableRenderer</renderer-class>
		</renderer>		 
	</render-kit>

	<lifecycle>
		<phase-listener>br.com.project.foundation.util.MultiPageMessagesSupport</phase-listener>
	</lifecycle>
	
</faces-config>